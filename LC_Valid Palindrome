//https://leetcode.com/problems/valid-palindrome/
class Solution {
public:
    bool isPalindrome(string s) {
        int i = 0;
        int j = s.size()-1;
        while(i<j){
            while(!isalnum(s[i])&&i<j){
                i++;
            }
            while(!isalnum(s[j])&&i<j){
                j--;
            }
            if(tolower(s[i])!=tolower(s[j])){
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
};
//isalnum判断是否是字母和数字
//tolower把大写字母转换成小写字母
